[Unit]
Description=TicTacToe Game
Wants=network-online.target
After=network.target network-online.target

[Service]
WorkingDirectory=/home/shawn/bitbucket/upper-division-cs-24-25/rl-25wi/tictactoe
ExecStart=/home/shawn/bitbucket/upper-division-cs-24-25/rl-25wi/tictactoe/.venv/bin/python -m gunicorn -b 127.0.0.1:5000 -w 1 game:app
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=tictactoe
User=shawn
Group=www-data

[Install]
WantedBy=multi-user.target
